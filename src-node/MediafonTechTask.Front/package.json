{
  "name": "mediafon-tech-task",
  "private": true,
  "version": "0.0.1",
  "description": "AngularJS app for a mediafon tech task",
  "repository": "https://github.com/mantasdaskev/mediafon_tech_task",
  "dependencies": {
    "angular": "1.8.x",
    "angular-animate": "1.8.x",
    "angular-resource": "1.8.x",
    "angular-route": "1.8.x",
    "bootstrap": "5.3.x"
  },
  "devDependencies": {
    "cpx": "^1.2.1",
    "http-server": "^14.1.1"
  },
  "scripts": {
    "postinstall": "npm run copy-libs",
    "update-deps": "npm update",
    "postupdate-deps": "npm run copy-libs",
    "copy-libs": "cpx \"node_modules/{angular,angular-*,bootstrap/dist}/**/*\" app/lib -C",
    "prestart": "npm install",
    "start": "http-server ./app -a localhost -p 8000 -c-1"
  }
}
